USER='nobody'
JMXMONITOR_HOME='/opt/jmxmonitor'
JMXMONITOR_CONFIG='/opt/etc/jmxmonitor/config'


case "$1" in
    'start')
        sudo su - $USER -c 'nohup $JMXMONITOR_HOME/bin/jmxmonitor -c $JMXMONITOR_CONFIG'
    ;;

    'stop')
        # To stop telnet to localhost and send stop key.

    ;;

exit 0
